{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "npm run preview",
    "restartPolicyType": "ON_FAILURE"
  },
  "routes": {
    "/api/*": {
      "service": "backend",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"]
    },
    "/*": {
      "service": "frontend",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"]
    }
  }
}